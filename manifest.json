{
  "name": "SnapStream - Image Downloader",
  "description": "Effortlessly discover, filter, and download images from any website",
  "version": "4.0.0",
  "minimum_chrome_version": "72",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "contextMenus",
    "cookies",
    "clipboardWrite",
    "notifications",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": "images/icon_128.png",
    "default_popup": "views/popup.html"
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": [
      "src/background/handleUpdates.js",
      "src/background/setReferrer.js"
    ]
  },
  "options_page": "views/options.html",
  "incognito": "spanning",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "images/*",
    "lib/*",
    "stylesheets/*"
  ]
}
