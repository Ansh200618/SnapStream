{
  "name": "snapstream-desktop",
  "version": "1.0.0",
  "description": "SnapStream Desktop - Image Downloader with Inbuilt Browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "snapstream",
    "image-downloader",
    "electron",
    "desktop-app"
  ],
  "author": "Ansh200618",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "@cliqz/adblocker-electron": "^1.26.0",
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.snapstream.desktop",
    "productName": "SnapStream Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "app.js",
      "index.html",
      "main.css",
      "images/**/*",
      "lib/**/*",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "images/icon_128.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "images/icon_128.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "images/icon_128.png"
    }
  }
}
